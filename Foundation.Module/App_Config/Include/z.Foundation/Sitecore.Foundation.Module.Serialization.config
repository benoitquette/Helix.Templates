<configuration xmlns:patch="http://www.sitecore.net/xmlconfig">
  <sitecore>
    <unicorn>
      <configurations>
        <configuration name="$layer$.$modulename$" description="$modulename$ Configuration" dependencies="$layer$.Serialization">
          <targetDataStore physicalRootPath="$destinationdirectory$\$modulename$\Serialization" type="Rainbow.Storage.SerializationFileSystemDataStore, Rainbow" useDataCache="false" singleInstance="true"/>
          <predicate type="Unicorn.Predicates.SerializationPresetPredicate, Unicorn" singleInstance ="true">
            <include name="$layer$.$modulename$.Templates" database="master" path="/sitecore/templates/$layer$/$modulename$">
              <exclude children="false"/>
            </include>
          </predicate>
        </configuration>
      </configurations>
    </unicorn>
  </sitecore>
</configuration>