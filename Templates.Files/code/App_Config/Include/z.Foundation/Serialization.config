<configuration xmlns:patch="http://www.sitecore.net/xmlconfig">
  <sitecore>
    <unicorn>
      <configurations>
        <configuration name="$ext_layer$.$ext_modulename$" description="$ext_modulename$ Configuration" dependencies="Foundation.Serialization" patch:after="configuration[@name='Foundation.Serialization']">
          <targetDataStore physicalRootPath="$ext_destinationdirectory$\serialization" type="Rainbow.Storage.SerializationFileSystemDataStore, Rainbow" useDataCache="false" singleInstance="true"/>
          <predicate type="Unicorn.Predicates.SerializationPresetPredicate, Unicorn" singleInstance ="true">
            <include name="$ext_layer$.$ext_modulename$.Templates" database="master" path="/sitecore/templates/$ext_layer$/$ext_modulename$"/>
            $ext_startcommentrenderings$
            <include name="$ext_layer$.$ext_modulename$.Renderings" database="master" path="/sitecore/layout/renderings/$ext_layer$/$ext_modulename$"/>
            $ext_endcommentrenderings$
          </predicate>
        </configuration>
      </configurations>
    </unicorn>
  </sitecore>
</configuration>